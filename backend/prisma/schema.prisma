// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model perfis {
  id         Int           @id @default(autoincrement())
  perfil     String
  usuario    usuarios[]    @relation("perfil")
  comentario comentarios[] @relation("comentario")
}

model usuarios {
  id        Int    @id @default(autoincrement())
  senha     Int
  perfil_id Int
  perfil    perfis @relation("perfil", fields: [perfil_id], references: [id])
}

model equipamentos {
  id          Int           @id @default(autoincrement())
  equipamento String
  imagem      String
  descricao   String
  ativo       Boolean
  data        DateTime      @default(now())
  comentario  comentarios[] @relation("equipamento")
}

model comentarios {
  id             Int          @id @default(autoincrement())
  comentario     String
  equipamento_id Int
  perfil_id      Int
  data           DateTime     @default(now())
  perfil         perfis       @relation("comentario", fields: [perfil_id], references: [id])
  equipamento    equipamentos @relation("equipamento", fields: [equipamento_id], references: [id])
}
